    <script>
        // 导航栏激活状态
        const navLinks = document.querySelectorAll('.nav-link');
        const sections = document.querySelectorAll('section');
        
        window.addEventListener('scroll', () => {
            let current = '';
            
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                const sectionHeight = section.clientHeight;
                
                if (pageYOffset >= (sectionTop - 200)) {
                    current = section.getAttribute('id');
                }
            });
            
            navLinks.forEach(link => {
                link.classList.remove('active-nav');
                if (link.getAttribute('href').substring(1) === current) {
                    link.classList.add('active-nav');
                }
            });
        });
        
        // 移动端菜单
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
        
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
        
        mobileNavLinks.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
            });
        });
        
        // 滚动动画
        const fadeElements = document.querySelectorAll('.fade-in');
        
        const fadeInOnScroll = () => {
            fadeElements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.classList.add('active');
                }
            });
        };
        
        window.addEventListener('scroll', fadeInOnScroll);
        window.addEventListener('load', fadeInOnScroll);
        
        // 视频模态框
        const videoModal = document.getElementById('video-modal');
        const modalIframe = document.getElementById('modal-iframe');
        const closeModal = document.querySelector('.close-modal');
        const playButtons = document.querySelectorAll('.play-button');
        
        playButtons.forEach(button => {
            button.addEventListener('click', () => {
                const videoUrl = button.getAttribute('data-video');
                modalIframe.src = videoUrl;
                videoModal.style.display = 'flex';
                document.body.style.overflow = 'hidden';
            });
        });
        
        closeModal.addEventListener('click', () => {
            videoModal.style.display = 'none';
            modalIframe.src = '';
            document.body.style.overflow = 'auto';
        });
        
        videoModal.addEventListener('click', (e) => {
            if (e.target === videoModal) {
                videoModal.style.display = 'none';
                modalIframe.src = '';
                document.body.style.overflow = 'auto';
            }
        });
        
        // 音乐播放器
        const musicPlayer = document.getElementById('music-player');
        const playMusicButtons = document.querySelectorAll('.play-music');
        const closePlayer = document.getElementById('close-player');
        const playPauseButton = document.getElementById('play-pause-button');
        const progressContainer = document.getElementById('progress-container');
        const progressBar = document.getElementById('progress-bar');
        const progressHandle = document.getElementById('progress-handle');
        const currentTimeDisplay = document.getElementById('current-time');
        const totalTimeDisplay = document.getElementById('total-time');
        const currentSongTitle = document.getElementById('current-song-title');
        const currentSongImage = document.getElementById('current-song-image');
        
        // 模拟音乐数据
        const songs = [
            {
                title: '孤独与诗',
                artist: '鞠婧祎',
                image: 'https://p26-doubao-search-sign.byteimg.com/labis/90d2a61220fdd6aee36747995b58145e~tplv-be4g95zd3a-image.jpeg?rk3s=542c0f93&x-expires=1779502006&x-signature=EFlKZpz31ubtajBhSfYSd2UuXUA%3D',
                duration: '3:45'
            },
            {
                title: '分裂时差',
                artist: '鞠婧祎',
                image: 'https://p26-doubao-search-sign.byteimg.com/labis/1947197c664363aad06968b58dd94e20~tplv-be4g95zd3a-image.jpeg?rk3s=542c0f93&x-expires=1779502006&x-signature=GtvNJAI5BbcNOJVSOSzeTOrDu6E%3D',
                duration: '4:02'
            },
            {
                title: '每一天',
                artist: '鞠婧祎',
                image: 'https://p26-doubao-search-sign.byteimg.com/labis/972c79111c12dc156982835c3d415925~tplv-be4g95zd3a-image.jpeg?rk3s=542c0f93&x-expires=1779502006&x-signature=ujWlWJttB%2BmQei8Jvb4OutOZfsI%3D',
                duration: '3:28'
            },
            {
                title: '叹云兮',
                artist: '鞠婧祎',
                image: 'https://p26-doubao-search-sign.byteimg.com/labis/5735a3e7ca8c3d9d80a12395fd48652c~tplv-be4g95zd3a-image.jpeg?rk3s=542c0f93&x-expires=1779502006&x-signature=65RFGF3WVusDIjbtaIj%2B0PKP2oQ%3D',
                duration: '4:15'
            },
            {
                title: '落花成泥',
                artist: '鞠婧祎',
                image: 'https://p26-doubao-search-sign.byteimg.com/labis/2dbf21ffbc7c2d86023c57b9b511866c~tplv-be4g95zd3a-image.jpeg?rk3s=542c0f93&x-expires=1779502006&x-signature=CyD2yALmSc9MEBPkbs4stnHnvwg%3D',
                duration: '3:58'
            },
            {
                title: '所念皆星河',
                artist: '鞠婧祎',
                image: 'https://p26-doubao-search-sign.byteimg.com/labis/78aa8e04c50dff17c7a996eb8303badd~tplv-be4g95zd3a-image.jpeg?rk3s=542c0f93&x-expires=1779502006&x-signature=3NqdDi9LwpY71DUSXwUfweMYgM0%3D',
                duration: '4:05'
            }
        ];
        
        let currentSongIndex = 0;
        let isPlaying = false;
        let progressInterval;
        
        // 播放音乐
        const playMusic = (songTitle) => {
            // 查找歌曲索引
            const songIndex = songs.findIndex(song => song.title === songTitle);
            if (songIndex !== -1) {
                currentSongIndex = songIndex;
            }
            
            const song = songs[currentSongIndex];
            currentSongTitle.textContent = song.title;
            currentSongImage.src = song.image;
            totalTimeDisplay.textContent = song.duration;
            
            // 显示播放器
            musicPlayer.classList.add('active');
            
            // 模拟播放
            playPause();
        };
        
        // 播放/暂停
        const playPause = () => {
            isPlaying = !isPlaying;
            
            if (isPlaying) {
                playPauseButton.innerHTML = '<i class="fas fa-pause"></i>';
                
                // 模拟进度条
                let progress = 0;
                progressBar.style.width = '0%';
                
                // 清除之前的定时器
                if (progressInterval) {
                    clearInterval(progressInterval);
                }
                
                // 设置新的定时器
                progressInterval = setInterval(() => {
                    progress += 0.1;
                    progressBar.style.width = `${progress}%`;
                    
                    // 计算当前时间
                    const [minutes, seconds] = songs[currentSongIndex].duration.split(':');
                    const totalSeconds = parseInt(minutes) * 60 + parseInt(seconds);
                    const currentSeconds = Math.floor(totalSeconds * progress / 100);
                    const currentMinutes = Math.floor(currentSeconds / 60);
                    const currentSecs = currentSeconds % 60;
                    
                    currentTimeDisplay.textContent = `${currentMinutes.toString().padStart(2, '0')}:${currentSecs.toString().padStart(2, '0')}`;
                    
                    // 移动进度条手柄
                    progressHandle.style.left = `${progress}%`;
                    
                    // 歌曲结束
                    if (progress >= 100) {
                        clearInterval(progressInterval);
                        nextSong();
                    }
                }, 100);
            } else {
                playPauseButton.innerHTML = '<i class="fas fa-play"></i>';
                clearInterval(progressInterval);
            }
        };
        
        // 下一首
        const nextSong = () => {
            currentSongIndex = (currentSongIndex + 1) % songs.length;
            clearInterval(progressInterval);
            playMusic(songs[currentSongIndex].title);
        };
        
        // 上一首
        const prevSong = () => {
            currentSongIndex = (currentSongIndex - 1 + songs.length) % songs.length;
            clearInterval(progressInterval);
            playMusic(songs[currentSongIndex].title);
        };
        
        // 事件监听
        playMusicButtons.forEach(button => {
            button.addEventListener('click', () => {
                const songTitle = button.getAttribute('data-song');
                playMusic(songTitle);
            });
        });
        
        closePlayer.addEventListener('click', () => {
            musicPlayer.classList.remove('active');
            isPlaying = false;
            playPauseButton.innerHTML = '<i class="fas fa-play"></i>';
            clearInterval(progressInterval);
        });
        
        playPauseButton.addEventListener('click', playPause);
        
        // 进度条控制
        progressContainer.addEventListener('click', (e) => {
            const rect = progressContainer.getBoundingClientRect();
            const pos = (e.clientX - rect.left) / rect.width;
            const progress = pos * 100;
            
            progressBar.style.width = `${progress}%`;
            progressHandle.style.left = `${progress}%`;
            
            // 计算当前时间
            const [minutes, seconds] = songs[currentSongIndex].duration.split(':');
            const totalSeconds = parseInt(minutes) * 60 + parseInt(seconds);
            const currentSeconds = Math.floor(totalSeconds * progress / 100);
            const currentMinutes = Math.floor(currentSeconds / 60);
            const currentSecs = currentSeconds % 60;
            
            currentTimeDisplay.textContent = `${currentMinutes.toString().padStart(2, '0')}:${currentSecs.toString().padStart(2, '0')}`;
        });
        
        // 趣味测试
        const startQuiz = document.getElementById('start-quiz');
        const quizStart = document.getElementById('quiz-start');
        const quizQuestions = document.getElementById('quiz-questions');
        const quizResult = document.getElementById('quiz-result');
        const questionContainers = document.querySelectorAll('.quiz-question-container');
        const nextQuestion = document.getElementById('next-question');
        const prevQuestion = document.getElementById('prev-question');
        const submitQuiz = document.getElementById('submit-quiz');
        const retryQuiz = document.getElementById('retry-quiz');
        const resultScore = document.querySelector('.result-score');
        const resultMessage = document.querySelector('.result-message');
        
        let currentQuestion = 0;
        let score = 0;
        let selectedOptions = [];
        
        // 开始测试
        startQuiz.addEventListener('click', () => {
            quizStart.classList.add('hidden');
            quizQuestions.classList.remove('hidden');
            showQuestion(0);
        });
        
        // 显示问题
        const showQuestion = (index) => {
            questionContainers.forEach((container, i) => {
                container.classList.toggle('hidden', i !== index);
            });
            
            // 更新按钮状态
            prevQuestion.classList.toggle('hidden', index === 0);
            
            if (index === questionContainers.length - 1) {
                nextQuestion.classList.add('hidden');
                submitQuiz.classList.remove('hidden');
            } else {
                nextQuestion.classList.remove('hidden');
                submitQuiz.classList.add('hidden');
            }
            
            // 恢复之前的选择
            const options = questionContainers[index].querySelectorAll('.quiz-option');
            options.forEach((option, i) => {
                option.classList.toggle('selected', selectedOptions[index] === i);
            });
        };
        
        // 选择选项
        questionContainers.forEach((container, qIndex) => {
            const options = container.querySelectorAll('.quiz-option');
            
            options.forEach((option, oIndex) => {
                option.addEventListener('click', () => {
                    // 移除其他选项的选中状态
                    options.forEach(opt => opt.classList.remove('selected'));
                    
                    // 添加当前选项的选中状态
                    option.classList.add('selected');
                    
                    // 记录选择
                    selectedOptions[qIndex] = oIndex;
                });
            });
        });
        
        // 下一题
        nextQuestion.addEventListener('click', () => {
            currentQuestion++;
            showQuestion(currentQuestion);
        });
        
        // 上一题
        prevQuestion.addEventListener('click', () => {
            currentQuestion--;
            showQuestion(currentQuestion);
        });
        
        // 提交测试
        submitQuiz.addEventListener('click', () => {
            // 计算得分
            score = 0;
            
            questionContainers.forEach((container, qIndex) => {
                const options = container.querySelectorAll('.quiz-option');
                const selectedIndex = selectedOptions[qIndex];
                
                if (selectedIndex !== undefined && options[selectedIndex].hasAttribute('data-correct')) {
                    score++;
                }
            });
            
            // 显示结果
            resultScore.textContent = `${score}/${questionContainers.length}`;
            
            // 根据得分显示不同的消息
            if (score === questionContainers.length) {
                resultMessage.textContent = '太棒了！你是鞠婧祎的真爱粉！';
            } else if (score >= questionContainers.length / 2) {
                resultMessage.textContent = '不错哦！你对小鞠有一定的了解！';
            } else {
                resultMessage.textContent = '继续加油，多了解小鞠吧！';
            }
            
            // 显示结果页面
            quizQuestions.classList.add('hidden');
            quizResult.classList.remove('hidden');
        });
        
        // 重新测试
        retryQuiz.addEventListener('click', () => {
            currentQuestion = 0;
            score = 0;
            selectedOptions = [];
            quizResult.classList.add('hidden');
            quizStart.classList.remove('hidden');
        });
    </script>
</body>
</html>
